#!/bin/sh

# So it can locate the config file
if [ "x$HOME" == "x" ]; then
export HOME=/root
fi

FILE="$1"
DEST="$2"

#CACHE=/sevogle-cache/`echo $FILE | perl -pi -e "s{/}{___}go"`

mkdir -p /sevogle-cache
s3cmd sync s3://${FILE} /sevogle-cache/

rm -f "${DEST}"
cp /sevogle-cache/`basename $FILE` "${DEST}"
